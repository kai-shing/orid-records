<div class="row">
  <div class="col-md-12">
    <%= link_to '新增 ORID', new_orid_path, class: 'btn btn-primary' %>
  </div>

  <div class="col-md-12">
  <% @orids.each do |orid| %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= link_to orid.created_at, orid_path(orid) %></div>
      <div class="panel-body">
        <h3>Objective</h3>
        <%= simple_format(orid.objective) %>
        <br>
        <h3>Reflective</h3>
        <%= simple_format(orid.reflective) %>
        <br>
        <h3>Interpretive</h3>
        <%= simple_format(orid.interpretive) %>
        <br>
        <h3>Decisional</h3>
        <%= simple_format(orid.decisional) %>
      </div>
    </div>
  <% end %>
  </div>
</div>
