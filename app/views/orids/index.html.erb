<div class="row">
  <div class="col-md-12">
    <%= link_to '新增 ORID', new_orid_path, class: 'btn btn-primary' %>
  </div>

  <div class="col-md-12">
  <% @orids.each do |orid| %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= orid.created_at %></div>
      <div class="panel-body">
        <h3>Objective</h3>
        <%= orid.objective %>
        <br>
        <h3>Reflective</h3>
        <%= orid.reflective %>
        <br>
        <h3>Interpretive</h3>
        <%= orid.interpretive %>
        <br>
        <h3>Decisional</h3>
        <%= orid.decisional %>
      </div>
      <div class="panel-footer">
        <%= link_to '編輯', edit_orid_path(orid), class: 'btn btn-sm btn-default' %>
        <%= link_to("刪除", orid_path(orid),    class: "btn btn-sm btn-default",
          method: :delete, data: { confirm: "Are you sure?" } )%>
      </div>
    </div>
  <% end %>
  </div>
</div>
