<div class="row">
  <div class="col-md-8 col-centered">
    <div class="panel panel-default">
      <div class="panel-body">
        <div>
          <%= link_to '新增 ORID', new_orid_path, class: 'btn btn-primary pull-right' %>
        </div>
        <table class="table table-hover">
          <thead>
            <tr>
              <td>#</td>
              <td>ORID 摘要</td>
              <td>作者</td>
              <td>建立時間</td>
            </tr>
          </thead>
          <tbody>
            <% @orids.each do |orid| %>
            <tr>
              <td>#</td>
              <td><%= link_to simple_format(truncate(orid.objective, length: 30 )), orid_path(orid) %></td>
              <td><%= orid.user.name %></td>
              <td><%= orid.created_at.strftime('%Y-%m-%d %H:%M') %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="text-center">
      <%= will_paginate @orids, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>

