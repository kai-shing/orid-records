  </head>

  <body>
    <div class="container-bg"></div>
   <div class="container-fluid">
    <%= render "common/navbar" %>
    <div class="row">
      <div class="col-md-2">
        <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
          <li> <%= link_to("Orids 列表", admin_orids_path) %> </li>
          <li> <%= link_to("User 列表", admin_users_path) %> </li>
        </ul>
      </div>
      <div class="col-md-10">
        <%= yield %>
      </div>
    </div>
    </div>
  </body>
</html>
